{
  "name": "angular-mdc",
  "description": "Angular Material Design Components",
  "homepage": "https://github.com/trimox/angular-mdc-web",
  "bugs": "https://github.com/trimox/angular-mdc-web/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/trimox/angular-mdc-web.git"
  },
  "version": "0.35.7",
  "engines": {
    "node": ">= 9.11.1"
  },
  "scripts": {
    "build": "gulp web:build",
    "build:release": "gulp web:build && gulp web:build-release",
    "migrate-mdc-sass": "rimraf src/theme/material-components-web && node scripts/migrate-mdc-scss.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "lint": "npm run lint:ts && npm run lint:css",
    "lint:ts": "tslint 'src/lib/**/*.ts'",
    "lint:css": "stylelint src/**/*.scss --config .stylelint-config.yaml",
    "fix:css": "stylelint --fix src/**/*.scss --config .stylelint-config.yaml",
    "test": "npm run test:unit",
    "test:unit": "karma start --single-run",
    "test:watch": "karma start --auto-watch",
    "server": "webpack-dev-server --config config/webpack/webpack.dev.js",
    "start": "npm run server"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^6.0.2",
    "@angular/compiler": "^6.0.2",
    "@angular/core": "^6.0.2",
    "@angular/forms": "^6.0.2",
    "@angular/platform-browser": "^6.0.2",
    "core-js": "^2.5.7",
    "material-components-web": "^0.36.0",
    "rxjs": "^6.2.0",
    "tsickle": "^0.28.0",
    "tslib": "^1.9.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^6.0.2",
    "@angular/platform-browser-dynamic": "^6.0.2",
    "@angular/router": "^6.0.2",
    "@babel/core": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@types/fs-extra": "^5.0.2",
    "@types/glob": "^5.0.35",
    "@types/gulp": "^4.0.5",
    "@types/jasmine": "^2.8.6",
    "@types/node": "^10.1.2",
    "@types/run-sequence": "0.0.30",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.5.0",
    "babel-loader": "^8.0.0-beta.3",
    "codecov": "^3.0.1",
    "codelyzer": "^4.3.0",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "focus-trap": "^2.4.5",
    "fs-extra": "^6.0.1",
    "glob": "^7.1.2",
    "gulp": "^3.9.1",
    "gulp-cli": "^2.0.1",
    "gulp-util": "^3.0.8",
    "html-loader": "^0.5.5",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-remap-istanbul": "^0.6.0",
    "karma-webpack": "^3.0.0",
    "magic-string": "^0.24.1",
    "node-sass": "^4.9.0",
    "raw-loader": "^0.5.1",
    "resolve-bin": "^0.4.0",
    "rollup": "^0.59.3",
    "rollup-plugin-alias": "^1.3.1",
    "rollup-plugin-babel": "^4.0.0-beta.4",
    "rollup-plugin-babel-minify": "^5.0.0",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "run-sequence": "^2.2.1",
    "sass-loader": "^7.0.1",
    "sourcemap-istanbul-instrumenter-loader": "^0.2.0",
    "string-replace-loader": "^2.1.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^3.0.1",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "ts-node": "^6.0.5",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.9.1",
    "typescript": "2.7.x",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "targets": {
            "browsers": [
              "last 2 versions",
              "not ie 10"
            ]
          }
        }
      ]
    ]
  },
  "config": {
    "validate-commit-msg": {
      "helpMessage": "%s\nNOTE: Please see angular's commit message guidelines (https://github.com/angular/angular.js/blob/master/CONTRIBUTING.md#commit) for information on how to format commit messages.\n\nAs an example, here is a valid commit message: 'docs(slider): Document slider public api'\n\nIf this commit is on a development / WIP branch, you can disable this by running `git commit --no-verify`.",
      "scope": {
        "allowed": [
          "app-bar",
          "button",
          "card",
          "checkbox",
          "chips",
          "common",
          "dialog",
          "drawer",
          "elevation",
          "fab",
          "floating-label",
          "form-field",
          "grid-list",
          "icon",
          "icon-button",
          "icon-toggle",
          "image-list",
          "layout-grid",
          "linear-progress",
          "line-ripple",
          "list",
          "material-icon",
          "menu",
          "notched-outline",
          "radio",
          "ripple",
          "rtl",
          "select",
          "shape",
          "slider",
          "snackbar",
          "switch",
          "tabs",
          "text-field",
          "theme",
          "toolbar",
          "typography",
          "demo",
          "infrastructure",
          "package"
        ],
        "validate": true
      }
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "private": true
}
